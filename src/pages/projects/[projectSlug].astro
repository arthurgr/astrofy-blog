---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug"

export async function getStaticPaths() {
  const allPosts = await getCollection("projects");
  
  // Group posts by project name
  const projectMap = new Map<string, typeof allPosts[0][]>();
  
  for (const post of allPosts) {
    const projectName = post.data.project;
    if (!projectMap.has(projectName)) {
      projectMap.set(projectName, []);
    }
    projectMap.get(projectName)!.push(post);
  }
  
  // Create paths for each project
  return Array.from(projectMap.entries()).map(([projectName, posts]) => {
    const projectSlug = createSlug(projectName, projectName);
    // Sort posts by date
    const sortedPosts = [...posts].sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
    
    return {
      params: { projectSlug: projectSlug },
      props: { 
        projectName,
        posts: sortedPosts,
        latestPost: sortedPosts[0] // For display metadata
      },
    };
  });
}

interface Props {
  projectName: string;
  posts: Awaited<ReturnType<typeof getCollection<"projects">>>;
  latestPost: Awaited<ReturnType<typeof getCollection<"projects">>>[0];
}

const { projectName, posts, latestPost } = Astro.props;

export const prerender = true;
---

<BaseLayout title={projectName} sideBarActiveItemID="projects">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">{projectName}</div>
  </div>
  
  {
    posts.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">Sorry!</p>
        <p>There are no posts for this project at the moment. Check back later!</p>
      </div>
    ) : (
      <ul>
        {posts.map((post) => (
          <>
            <HorizontalCard
              title={post.data.title}
              img={post.data.heroImage}
              desc={post.data.description}
              url={"/projects/" + createSlug(projectName, projectName) + "/" + createSlug(post.data.title, post.slug)}
              target="_self"
              badge={post.data.badge}
              tags={post.data.tags}
              pubDate={post.data.pubDate}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }
</BaseLayout>
